{
  "name": "online-store-api",
  "version": "1.0.0",
  "description": "Online store API",
  "main": "index.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js ",
    "test": "NODE_PATH=./src jest --silent",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yexhoo/online-store-api.git"
  },
  "keywords": [
    "online",
    "store",
    "api"
  ],
  "author": "Josue Nolasco Miranda (yexhoo)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yexhoo/online-store-api/issues"
  },
  "homepage": "https://github.com/yexhoo/online-store-api#readme",
  "devDependencies": {
    "eslint": "7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "husky": "3.0.5",
    "jest": "26.0.1",
    "nodemon": "2.0.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "express": "4.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint"
    }
  }
}
